# ===========================================
# RevShare Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Database (Supabase PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ===========================================
# Supabase
# ===========================================
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="your_supabase_anon_key"

# ===========================================
# Stripe
# ===========================================
# Platform Stripe account (for Connect)
NEXT_PUBLIC_PLATFORM_STRIPE_PUBLISHABLE_KEY="pk_test_..."
PLATFORM_STRIPE_SECRET_KEY="sk_test_..."
PLATFORM_STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Connect
STRIPE_CONNECT_CLIENT_ID="ca_..."

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="RevShare <noreply@yourdomain.com>"

# ===========================================
# Encryption
# ===========================================
# Generate with: openssl rand -base64 32
KEY_ENCRYPTION_SECRET="your_32_char_encryption_key_here"

# ===========================================
# AI/LLM (Optional)
# ===========================================
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"

# ===========================================
# Site Configuration
# ===========================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_WAIT_LIST_MODE="false"

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_GA_ID=""

# ===========================================
# Social Integrations (Optional)
# ===========================================
X_BEARER_TOKEN=""
YOUTUBE_API_KEY=""
